PLOT = visualize.py

plot: $(PLOT) ## generate plots
	uv run $(PLOT)

clean: ## clean up outputs
	-rm output/*.html

help: ## show this help
	@echo "Specify a command:"
	@grep -E '^[0-9a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  \033[0;36m%-12s\033[m %s\n", $$1, $$2}'
	@echo ""
.PHONY: help
